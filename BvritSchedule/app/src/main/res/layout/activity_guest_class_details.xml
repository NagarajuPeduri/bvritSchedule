<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".classDetails"
    android:padding="4dp"
    android:background="@color/mycolor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:background="@drawable/shadow"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class Incharge"
                    android:textColor="#ffffff"
                    android:layout_marginTop="5dp"
                    android:textSize="25dp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/inchargeName"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name "
                    android:textSize="24dp"
                    android:textColor="#ffffff"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone : "
                        android:textColor="#ffffff"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/inchargeNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="Number"
                        android:layout_marginLeft="8dp"
                        android:textSize="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="Email : "
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/inchargeEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="8dp"
                        android:textSize="20dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/guestcallIncharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/border"
                android:text="Call?"
                android:textSize="22dp"
                android:textColor="#ffffff"
                android:layout_margin="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shadow"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cr-1"
                    android:textSize="25dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/cr1Name"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name "
                    android:textSize="24dp"
                    android:textColor="#ffffff"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="Phone : "
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/cr1Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Number"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="8dp"
                        android:textSize="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="Email : "
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/cr1Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="8dp"
                        android:textSize="20dp"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/guestcallCr1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/border"
                android:text="Call?"
                android:textSize="22dp"
                android:textColor="#ffffff"
                android:layout_margin="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/shadow"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cr-2"
                    android:textSize="25dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ffffff"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/cr2Name"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name "
                    android:textSize="24dp"
                    android:textColor="#ffffff"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="Phone : "
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/cr2Number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="Number"
                        android:layout_marginLeft="8dp"
                        android:textSize="20dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email : "
                        android:textColor="#ffffff"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/cr2Email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_marginLeft="8dp"
                        android:textColor="#ffffff"
                        android:textSize="20dp"/>

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/guestcallCr2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/border"
                android:text="Call?"
                android:textSize="22dp"
                android:textColor="#ffffff"
                android:layout_margin="15dp"
                android:layout_marginBottom="20dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>

            <Button
                android:id="@+id/sectionTimetable"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="show section timetable"
                android:layout_marginBottom="50dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button"/>

        </LinearLayout>

</ScrollView>