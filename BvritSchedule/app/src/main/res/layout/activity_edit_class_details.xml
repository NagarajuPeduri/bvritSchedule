<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editClassDetails"
    android:background="@color/mycolor"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class incharge"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="22dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    android:textSize="22dp"
                    android:textColor="#ffffff"
                    />

                <EditText
                    android:id="@+id/inchargeName"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Phone : "
                    android:textColor="#ffffff"
                    android:textSize="22dp"
                    />

                <EditText
                    android:id="@+id/inchargeNumber"
                    android:inputType="number"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:hint="Phone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Email : "
                    android:textSize="22dp"
                    android:textColor="#ffffff"
                    />

                <EditText
                    android:id="@+id/inchargeEmail"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_height="wrap_content"
                    android:hint="Email"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CR1"
                android:textSize="22dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    android:textSize="22dp"
                    android:textColor="#ffffff"
                    />

                <EditText
                    android:id="@+id/cr1Name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Phone : "
                    android:textColor="#ffffff"
                    android:textSize="22dp"
                    />

                <EditText
                    android:id="@+id/cr1Number"
                    android:inputType="number"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:hint="Phone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Email : "
                    android:textSize="22dp"
                    android:textColor="#ffffff"
                    />

                <EditText
                    android:id="@+id/cr1Email"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_height="wrap_content"
                    android:hint="Email"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow"
            android:padding="8dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CR2"
                android:textSize="22dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ffffff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    android:textSize="22dp"
                    android:textColor="#ffffff"
                    />

                <EditText
                    android:id="@+id/cr2Name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Phone : "
                    android:textColor="#ffffff"
                    android:textSize="22dp"
                    />

                <EditText
                    android:id="@+id/cr2Number"
                    android:inputType="number"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:hint="Phone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Email : "
                    android:textSize="22dp"
                    android:textColor="#ffffff"
                    />

                <EditText
                    android:id="@+id/cr2Email"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:layout_height="wrap_content"
                    android:hint="Email"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/classTimeTable"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:text="browse timetable and submit"
            />

    </LinearLayout>

</ScrollView>